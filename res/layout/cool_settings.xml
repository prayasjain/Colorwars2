<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainscreen"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.colorwars.MainActivity" >

       <Button
           android:id="@+id/mode"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="8"
           android:text="Mode : Single Player (Vs. Bot)"
           android:textSize="20sp"
           android:textAlignment="center"
           android:gravity="center_horizontal"
           android:paddingTop="15dp"
           android:textColor="#FFF"
        />
       <TextView 
           android:id="@+id/p1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="8"
           android:text="Player 1"
           android:textSize="20sp"
           android:textAlignment="center"
           android:gravity="center_horizontal"
           android:paddingTop="15dp"
           android:textColor="#FFF"
           />
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="15"
           android:orientation="horizontal">
         <Button
           android:layout_width="wrap_content"
           android:id="@+id/p1color"
           android:layout_height="wrap_content"
           android:layout_weight="100"
           android:text="Color : Blue"
           android:textSize="18sp"
           android:textAlignment="center"
           android:gravity="center"
           android:textColor="#FFF"
           
           />  

           <Button
               android:id="@+id/color1"
               android:layout_width="55dp"
               android:layout_height="wrap_content"
               android:background="@drawable/blue" />
           
       </LinearLayout>
             <TextView 
           android:id="@+id/p2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="8"
           android:text="Player 2"
           android:textSize="20sp"
           android:textAlignment="center"
           android:gravity="center_horizontal"
           android:paddingTop="15dp"
           android:textColor="#FFF"
           />
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="15"
           android:orientation="horizontal">
         <Button
           android:layout_width="wrap_content"
           android:id="@+id/p2color"
           android:layout_height="wrap_content"
           android:layout_weight="100"
           android:text="Color : Red"
           android:textSize="18sp"
           android:textAlignment="center"
           android:gravity="center"
           android:textColor="#FFF"
           
           />  

           <Button
               android:id="@+id/color2"
               android:layout_width="55dp"
               android:layout_height="wrap_content"
               android:background="@drawable/red" />
           
       </LinearLayout>
        <Button
           android:id="@+id/play"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="8"
           android:text="Play"
           android:textSize="20sp"
           android:textAlignment="center"
           android:gravity="center_horizontal"
           android:paddingTop="15dp"
           android:textColor="#FFF"
        />

</LinearLayout>
