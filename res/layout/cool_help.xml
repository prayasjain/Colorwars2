<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainscreen"
    android:orientation="vertical"
    android:weightSum="100"
    
    tools:context="com.example.colorwars.MainActivity" >

    <TextView
        android:id="@+id/tvmainhelph"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/llsecondarycolor"
        android:drawableLeft="@drawable/ic_launcher2"
        android:text="ColorWars"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:textColor="#FFF"
        android:textSize="52dp"
        android:layout_weight="90" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/llmaincolor"
        android:layout_weight="10" >

        <TextView
            android:id="@+id/tvcwhelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:gravity="center"
            android:paddingBottom="40dp"
            android:text="HELP"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#3D4C53"
            android:textSize="60sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/bhelpbasicplay"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/help_play"
            android:shadowColor="#A84300"
            android:shadowDx="1"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="Basic Play"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/bhelppowerups"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/help_power"
            android:shadowColor="#A84300"
            android:shadowDx="1"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="Powerups"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/bhelpwin"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/help_win"
            android:shadowColor="#A84300"
            android:shadowDx="1"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="How To Win"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/bhelpsoon"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="56dp"
            android:background="@drawable/help_soon"
            android:shadowColor="#A84300"
            android:shadowDx="1"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="Coming Soon"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>